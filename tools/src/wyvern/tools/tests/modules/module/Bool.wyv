// a simple library for booleans

type UnitDynFn
	def apply():Dyn

type Bool
	def ifTrue(trueCase:UnitDynFn, falseCase:UnitDynFn):Dyn

val true : Bool = new
	def ifTrue(trueCase:UnitDynFn, falseCase:UnitDynFn):Dyn
		trueCase()
	
val false : Bool = new
	def ifTrue(trueCase:UnitDynFn, falseCase:UnitDynFn):Dyn
		falseCase()
		
